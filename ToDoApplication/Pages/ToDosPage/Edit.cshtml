
@*The div containing label and input for Completed Date is hidden as the
    system should assign the value automatically based on the Is Completed value*@

@page
@model ToDoApplication.Areas.Admin.Pages.ToDosPage.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>ToDos</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ToDos.ToDosId" />
            <div class="form-group">
                <label asp-for="ToDos.Description" class="control-label"></label>
                <input asp-for="ToDos.Description" class="form-control" />
                <span asp-validation-for="ToDos.Description" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="ToDos.IsCompleted" /> @Html.DisplayNameFor(model => model.ToDos.IsCompleted)
                </label>
            </div>
            @*<div class="form-group">
                <label asp-for="ToDos.CompletedDate" class="control-label"></label>
                <input asp-for="ToDos.CompletedDate" class="form-control" />
                <span asp-validation-for="ToDos.CompletedDate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
